<p>クイックシェア</p>

<%= link_to 'メモ作成', memos_main_path, class: 'btn btn-primary' %>
<%= link_to 'メモ検索', '#', class: 'btn btn-secondary', data: { toggle: 'modal', target: '#searchModal' } %>

<!-- 検索モーダル -->
<div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="searchModalLabel">メモ検索</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with url: memos_main_path, method: :get do |f| %>
          <div class="form-group">
            <%= f.label :password, 'キーワード' %>
            <%= f.text_field :password, class: 'form-control' %>
          </div>
          <%= f.submit '検索', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
